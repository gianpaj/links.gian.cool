import * as links from '../../content/links.md';

const mainLinks = links.rawContent().split('\n').filter(Boolean).map((link) => {
  const [title, url] = link.split('](');

  return {
    title: title.replace('- [', ''),
    url: url.replace(')', ''),
  };
});

